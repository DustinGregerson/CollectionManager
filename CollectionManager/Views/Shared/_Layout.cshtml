<!DOCTYPE html>
<!--
    Author: Dustin Gregerson
    Date: 9/16/22
    Description:

    Default layout for all the pages
-->
@{
    var username = Context.Session.GetString("userName");

}
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/Reset.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Custom.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
        @if(username==null||username.Equals("null")){
        <nav class="navbar navbar-dark bg-dark">
           <ul class="navbar nav">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">
                        Home Page
                    </a>
                </li>
               <li class="nav-item">
                    <a asp-controller="Item" asp-action="List" class="nav-link">
                       Collection Items
                   </a>
               </li>
               <li class="nav-item">
                    <a asp-controller="User" asp-action="Login" class="nav-link">
                       Login
                   </a>
               </li>
           </ul>
       </nav>
        }
        else{
        <nav class="navbar navbar-dark bg-dark">
            <ul class="navbar nav">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">
                        Home Page
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Item" asp-action="List" class="nav-link">
                        Collection Items
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="User" asp-action="Details" class="nav-link">
                            @username
                    </a>
                </li>
                <li class ="nav-item">
                    <a asp-controller="User" asp-action="LogOut" class="nav-link">
                       LogOut
                    </a>
                </li>
           </ul>
       </nav>
       }
    
        @RenderBody()
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>