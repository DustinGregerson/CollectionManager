@model List<ItemsToUsersList>
<table id="itemListTable" class="table table-striped table-hover">
    <tr scope="row">
        <th>
            Name
        </th>
        <th>
            Tag
        </th>
        <th>
            User Name
        </th>
        <th>
            Picture
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr scope="row">
            <td>
                @item.name
            </td>
            <td>
                @item.tag
            </td>
            <td>
                @item.userName
            </td>
            <td>
                <img src="data:image/png;base64,@item.pic">
            </td>
            <td>
                <form asp-controller="Item" asp-action="Delete" asp-route-id="@item.itemId" class="form-group" method="get">
                    <input value="Delete" class="btn btn-dark" type="submit">
                </form>
                <form asp-controller="Item" asp-action="Detailed" asp-route-id="@item.itemId" class="form-group" method="get">
                    <input value="Edit" class="btn btn-dark" type="submit">
                </form>
            </td>
        </tr>
    }
    <tr>
        <td>
        <form asp-controller="Item" asp-action="Add" class="form-group" method="get">
            <input value="ADD" class="btn btn-dark" type="submit">
        </form>
        </td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
    </tr>

</table>
